<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="/css/main.css")

        title Register New Account
    body
        .user

            if errors 
                for error in errors
                    .user_error
                        p=error.message
                        span(class="user_error_close") X
            form(
                action="/dashboard/user/register", 
                method="post"
                autocomplete="off"
                class="user_form")

                .user_form_image
                    img(
                        src="/images/profile.png", 
                        alt="form logo"
                        class='user_form_image_logo')
                label(class="user_form_label") Email address
                input(
                    type="text" 
                    class='user_form_input'
                    name="email")
                label(class="user_form_label") Password
                input(
                    type="password" 
                    class='user_form_input' 
                    name="password")
                button(type="submit" class="btn") Register

                div 
                    p Already have an account? 
                        a(href="/dashboard/user/login") Login

        script(src="/scripts/app.js")